{
  "name": "Ghost Downloader Browser Extension",
  "version": "1.1.2",
  "manifest_version": 2,
  "description": "Ghost Downloader 的浏览器辅助插件，用于捕获浏览器下载任务.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Ghost Downloader Browser Extension"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "downloads",
    "webRequest",
    "activeTab",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ghostdownloader@github.com"
    }
  }
}